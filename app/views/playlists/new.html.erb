<div class="main-content">
  <div class="container-fluid">
    <div class="row justify-content-center">
      <div class="col-12">

        <div class="header mt-md-5">
          <div class="header-body">
            <div class="row align-items-center">
              <div class="col">
                
                <div class="">
                  <!-- Pretitle -->
                  <h6 class="header-pretitle">
                    Playlist
                  </h6>

                  <!-- Title -->
                  <h1 class="header-title">
                    Build a new playlist
                  </h1>
                  <small>Variables: <code>days_ago, days_ago_filter, limit, bpm, bpm_filter, release_date_start, release_date_end</code></small>
                </div>

                <div class="card">
                  <div class="card-body">

                    <%= form_for @playlist, url: {action: "create"}, html: {class: "form-inline"} do |f| %>
                      <%= f.label :name, class: 'sr-only' %>
                      <%= f.text_field :name, class: 'form-control mb-2 mr-sm-2', placeholder: 'Playlist Name' %>
                      <%= f.submit 'Submit', class: 'btn btn-primary mb-2' %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div> <!-- / .row -->
          </div>
        </div>


